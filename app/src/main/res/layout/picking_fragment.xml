<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.PickingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/picking_materialBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Material barcode"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/picking_material_scanButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:text="@string/Scan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/picking_bin_materialBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Bin barcode"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/picking_bin_scanButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:text="@string/Scan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/picking_rack_materialBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Rack barcode"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/picking_rack_scanButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:text="@string/Scan" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pickingItems"
                android:layout_width="match_parent"
                android:layout_height="578dp"
                android:paddingTop="10dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



</LinearLayout>




